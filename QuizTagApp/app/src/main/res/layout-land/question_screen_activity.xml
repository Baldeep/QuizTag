<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              app:theme="@style/AppTheme"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="0.2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/question_field"
            android:textSize="20sp"
            android:layout_weight="0.4"
            android:layout_marginBottom="2dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hint1"
            android:layout_weight="0.1"
            android:backgroundTint="@android:color/transparent"
            android:visibility="invisible"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hint2"
            android:layout_weight="0.1"
            android:backgroundTint="@android:color/transparent"
            android:visibility="invisible"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hint3"
            android:layout_weight="0.1"
            android:backgroundTint="@android:color/transparent"
            android:visibility="invisible"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hint4"
            android:layout_weight="0.1"
            android:backgroundTint="@android:color/transparent"
            android:visibility="invisible"
            android:textSize="17sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="6"
        android:layout_weight="0.8">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="@string/skips_text"
            android:id="@+id/skips_btn"
            android:src="@drawable/skip_icon"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:contentDescription="@string/skip_icon_description" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/skips_text"
            android:id="@+id/skips_count_text"
            android:gravity="center"
            android:padding="5dp"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="@string/hints_text"
            android:id="@+id/hints_btn"
            android:src="@drawable/hint_icon"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:contentDescription="@string/hint_icon_description" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/hints_text"
            android:id="@+id/hints_count_text"
            android:gravity="center"
            android:padding="5dp"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:text="@string/coins_text"
            android:id="@+id/coins_btn"
            android:src="@drawable/coins_icon"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:contentDescription="@string/coin_icon_description" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/coins_text"
            android:id="@+id/coins_count_text"
            android:gravity="center"
            android:padding="5dp"/>

    </LinearLayout>

</LinearLayout>